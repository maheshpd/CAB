<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context=".DriverLoginRegisterActivity">

    <TextView
        android:id="@+id/driver_login_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="210dp"
        android:text="Driver Login"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/driver_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/driver_login_txt"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:textColor="@android:color/white"
        android:hint="Email"
        android:text="mahesh@gmail.com"
        android:inputType="textEmailAddress"
        android:lines="1"
        android:paddingStart="10dp"
        android:singleLine="true"
        android:textColorHint="#ffffff" />

    <EditText
        android:id="@+id/driver_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/driver_email"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:text="123456789"
        android:textColor="@android:color/white"
        android:layout_marginEnd="30dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:lines="1"
        android:paddingStart="10dp"
        android:singleLine="true"
        android:textColorHint="@android:color/white" />

    <Button
        android:id="@+id/driver_login_btn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/driver_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@color/colorAccent"
        android:text="Login" />


    <Button
        android:id="@+id/driver_register_btn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/driver_login_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@android:color/holo_green_dark"
        android:text="Register"
        android:textColor="@android:color/white" />
</RelativeLayout>